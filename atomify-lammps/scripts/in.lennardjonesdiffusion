# bulk Si via USC (Anders Hafreager, UiO)
# using real units: http://lammps.sandia.gov/doc/units.html

units		metal
atom_style	atomic

read_data /repos/lammps/src/usc/sio4.data
replicate  1 1 1

#lattice		diamond 5.431
#region		box block 0 5 0 5 0 5
#create_box	1 box
#create_atoms	1 box

pair_style	usc
pair_coeff	* * /repos/lammps/src/usc/SiO.usc Si O
#pair_coeff	* * /repos/lammps/src/usc/Si.usc Si
mass            1 28.08
mass            2 15.9994

velocity	all create 0.0 376847 loop geom

neighbor	1.0 bin
neigh_modify    delay 5 every 1

fix		1 all nve

timestep	0.001

run		10000
